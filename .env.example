# RAG Document QA System Configuration
# Copyright (c) 2024 Balenci Cash

# LLM Configuration (Groq only - OpenAI removed)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
MAX_TOKENS=500
TEMPERATURE=0.3

# Ollama Configuration for Embeddings
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ComfyUI Configuration
COMFYUI_ENABLED=false
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188
DEFAULT_WORKFLOW_PATH=workflows/default.json
OUTPUT_DIRECTORY=outputs/comfyui

# LangSmith Configuration (Optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=rag-document-qa

# Application Settings
API_HOST=0.0.0.0
API_PORT=8000
APP_NAME=RAG Document QA System
APP_VERSION=2.0.0
ENVIRONMENT=development

# Logging Configuration  
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Vector Store Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Security Settings
ENABLE_WATERMARK=true
WATERMARK_SIGNATURE=BC-RAG-2024